<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     >

   <TextView android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:text="total count" android:gravity="center"
				android:textSize="25sp" android:id="@+id/count_for_settings"
				android:background="@drawable/speech_bubble" />

	<com.kinnack.nthings.widget.SetOverviewChart
	    android:id="@+id/setOverviewChart"
	    android:layout_width="match_parent"
	    android:layout_height="100dp" 
	    android:layout_centerHorizontal="true"
	    android:layout_below="@id/count_for_settings"/>

    <Button
        android:id="@+id/startButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/start" />

</RelativeLayout>