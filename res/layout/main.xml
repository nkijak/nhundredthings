<?xml version="1.0" encoding="utf-8"?>

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="vertical" android:layout_width="match_parent"
		android:layout_height="match_parent" android:layout_gravity="center_horizontal"
		android:paddingLeft="20dp" android:paddingRight="20dp">
	
		<ImageView android:id="@+id/InAppLogo" android:layout_width="wrap_content" android:paddingLeft="8dp" android:layout_height="wrap_content" android:src="@drawable/inapp_logo"></ImageView>
		
		<Button android:layout_height="wrap_content" android:id="@+id/PushupsButton"
			android:text="Push Ups" android:gravity="center_horizontal"
			android:layout_width="fill_parent" android:onClick="doPushups"></Button>
			
		
		
		<Button android:layout_height="wrap_content" android:id="@+id/SitupsButton"
			android:text="@string/situps_button_txt" android:gravity="center_horizontal"
			android:layout_width="fill_parent" android:onClick="doSitups"></Button>
			
		
		
	
</LinearLayout>
