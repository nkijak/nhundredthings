<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center_horizontal" android:padding="20px">

<Button android:layout_height="wrap_content" android:id="@+id/PushupsButton" android:text="Push Ups" android:textSize="20pt" android:gravity="center_horizontal" android:layout_width="fill_parent" android:onClick="doPushups"></Button>
<Button android:layout_height="wrap_content" android:id="@+id/SquatsButton" android:text="Squats" android:textSize="20pt" android:layout_width="fill_parent" android:gravity="center_horizontal" android:enabled="false"></Button>
<Button android:layout_height="wrap_content" android:id="@+id/SitupsButton" android:text="Sit Ups" android:textSize="20pt" android:layout_width="fill_parent" android:gravity="center_horizontal" android:enabled="false"></Button>
<Button android:layout_height="wrap_content" android:id="@+id/WorkoutButton" android:text="Workout" android:textSize="20pt" android:layout_width="fill_parent" android:gravity="center_horizontal" android:enabled="false"></Button>
</LinearLayout>
