<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:columnCount="6"
    app:alignmentMode="alignMargins"
    app:rowCount="3"
    app:columnOrderPreserved="false"
    app:orientation="horizontal"
    app:useDefaultMargins="false"
    android:id="@+id/selectorGridLayout">

    <Button
        android:text="1"
        android:id="@+id/week1"
        app:layout_gravity="fill"
        android:width="48dp" />
    <Button
        android:text="2"
        android:id="@+id/week2"
        app:layout_gravity="fill" android:width="48dp" />
    <Button
        android:text="3"
        android:id="@+id/week3"
        app:layout_gravity="fill" android:width="48dp" />
    <Button
        android:text="4"
        android:id="@+id/week4"
        app:layout_gravity="fill" android:width="48dp" />
    <Button
        android:text="5"
        android:id="@+id/week5"
        app:layout_gravity="fill" android:width="48dp" />
    <Button
        android:text="6"
        android:id="@+id/week6"
        app:layout_gravity="fill" android:width="48dp" />




    <Button
        android:text="1"
        android:id="@+id/day1"
        app:layout_columnSpan="2"
        app:layout_gravity="fill" />
    <Button
        android:text="2"
        android:id="@+id/day2"
        app:layout_columnSpan="2"
        app:layout_gravity="fill" />
    <Button
        android:text="3"
        android:id="@+id/day3"
        app:layout_columnSpan="2"
        app:layout_gravity="fill" />



    <Button
        android:text="E"
        android:id="@+id/levelEasy"
        app:layout_columnSpan="2"
        app:layout_gravity="fill"
        android:layout_margin="0dp"
        android:padding="0dp" />
    <Button
        android:text="M"
        android:id="@+id/levelMid"
        app:layout_columnSpan="2"
        app:layout_gravity="center|fill|bottom|left|right|top"
        android:layout_margin="0dp"
        android:padding="0dp" />
    <Button
        android:text="H"
        android:id="@+id/levelHard"
        app:layout_columnSpan="2"
        app:layout_gravity="fill"
        android:layout_margin="0dp" />
</android.support.v7.widget.GridLayout >

